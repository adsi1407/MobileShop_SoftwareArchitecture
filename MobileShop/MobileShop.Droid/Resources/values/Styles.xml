<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MobileShop.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@color/general_background</item>
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryDark">@color/primary_color_dark</item>
    <item name="android:colorAccent">@color/general_text_color</item>
    <item name="android:textColorPrimary">@color/title_text_color</item>
    <item name="colorControlActivated">@color/general_text_color</item>
    <item name="android:textViewStyle">@style/MobileShop.Theme.TextView</item>
    <item name="editTextStyle">@style/MobileShop.Theme.EditText</item>
    <item name="buttonStyle">@style/MobileShop.Theme.Button</item>
  </style>

  <style name="MobileShop.Theme.TextView" parent="@android:Widget.TextView">
    <item name="android:textColor">@color/general_text_color</item>
    <item name="android:textSize">@dimen/general_text_size</item>
  </style>

  <style name="MobileShop.Theme.EditText" parent="@android:Widget.EditText">
    <item name="android:textColor">@color/general_text_color</item>
    <item name="android:textSize">@dimen/general_text_size</item>
    <item name="android:singleLine">true</item>
    <item name="android:backgroundTint">@color/general_text_color</item>
    <item name="android:textColorHint">@color/general_text_color</item>
  </style>

  <style name="MobileShop.Theme.Button" parent="@android:Widget.Button">
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="android:background">@color/primary_color_dark</item>
    <item name="android:textColor">@color/title_text_color</item>
  </style>
</resources>